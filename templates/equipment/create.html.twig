{% extends 'base.html.twig' %}

{% block title %}
    {% if edit %}
        Modifier l'équipement'
    {% else %}
        Ajouter un équipement
    {% endif %}
{% endblock %}

{% block body %}
    {% if edit %}
        <h1 class="mt-5">Modifier l'équipement</h1>
    {% else %}
        <h1 class="mt-5">Ajouter un nouvel équipement</h1>
    {% endif %}

    {{ form_start(equipmentForm) }}
    {{ form_row(equipmentForm.name) }}
    <button class="btn btn-success" type="submit">AJOUTER</button>
    {{ form_end(equipmentForm) }}
    <a href="{{ path('app_equipment') }}" class="mt-3 btn btn-primary">ANNULER</a>
{% endblock %}
