{% extends 'base.html.twig' %}

{% block title %}
    {% if edit %}
        Modifier l'hébergement
    {% else %}
        Ajouter un hébergement
    {% endif %}
{% endblock %}

{% block body %}
    {% if edit %}
        <h1 class="mt-5">Modifier l'hébergement</h1>
    {% else %}
        <h1 class="mt-5">Ajouter un nouvel hébergement</h1>
    {% endif %}

    {{ form_start(roomForm) }}
    {{ form_label(roomForm.name, "Dénomination de l'hébergement") }}
    {{ form_widget(roomForm.name) }}
    {{ form_label(roomForm.occupants, "Nombre max d'occupants") }}
    {{ form_widget(roomForm.occupants) }}
    {{ form_label(roomForm.number, "Nombre max d'hébergements") }}
    {{ form_widget(roomForm.number) }}
    {{ form_label(roomForm.price, "Prix de l'hébergement") }}
    {{ form_widget(roomForm.price) }}
    <button class="btn btn-success" type="submit">AJOUTER</button>
    {{ form_end(roomForm) }}
    <a href="{{ path('app_rooms', {id:property.id}) }}" class="mt-3 btn btn-primary">ANNULER</a>
{% endblock %}
