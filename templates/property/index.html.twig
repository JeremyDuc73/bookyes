{% extends 'base.html.twig' %}

{% block title %}Hello PropertyController!{% endblock %}

{% block body %}
    {% for property in properties %}
        <div class="border border-dark mt-4 mb-4 p-3">
            <h3>{{ property.name }}</h3>
            {% for i in 1..5 %}
                {% if property.star < i %}
                    <i class="bi bi-star"></i>
                {% else %}
                    <i class="bi bi-star-fill"></i>
                {% endif %}
            {% endfor %}
            <p class="border">{{ property.propertyCategory.name }}</p>
            <p>{{ property.description }}</p>
            {% for equipment in property.equipments %}
                <p>{{ equipment.name }}</p>
                {% endfor %}
        </div>
    {% endfor %}
{% endblock %}
